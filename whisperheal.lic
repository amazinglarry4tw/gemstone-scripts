hide_me

def wait(length=1)
	sleep(rand(1..length))
end									

while (line = get)			
			
	if line.include? "whispers,"		
		if line.downcase.include? "heal" 
			wait(3) #Randomly wait between 1 and 3 seconds.
			target = line.split[0]
			echo target
			fput "nod " + target
			wait(2) #Wait between 1 & 2 seconds before healing.
			start_script('newheal', [target])
		end
	end
end