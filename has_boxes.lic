@bag_contents = GameObj.containers.values.flatten
@how_many = 0

get_item = proc { |item|
	fput "get ##{item.id}"
	fput "wave ##{item.id}"
	fput "stow ##{item.id}"
}

for obj in @bag_contents
	if obj.noun =~ /^(?:zircon)$/
		get_item.call(obj)
		@how_many += 1
	end
end

fput "say I have #{@how_many} of those!"

